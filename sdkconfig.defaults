# Wi-Fi Configuration
CONFIG_ESP_WIFI_SSID="YOUR_WIFI_SSID"
CONFIG_ESP_WIFI_PASSWORD="YOUR_WIFI_PASSWORD"
CONFIG_ESP_MAXIMUM_RETRY=10
CONFIG_ESP_WIFI_AUTH_WPA2_PSK=y

# UART Configuration
CONFIG_APP_UART_PORT_NUM=1
CONFIG_APP_UART_TXD=21
CONFIG_APP_UART_RXD=20
CONFIG_APP_UART_BAUD_RATE=115200

# MQTT Configuration
CONFIG_BROKER_URL="mqtt://broker.emqx.io:1883" # This is the default from the example, we'll map our APP_MQTT_BROKER_URI to it.
CONFIG_APP_MQTT_BROKER_URI="mqtt://broker.emqx.io:1883"
CONFIG_APP_MQTT_TOPIC_SMS="esp32/sms"

# Log levels (optional, for debugging)
CONFIG_LOG_DEFAULT_LEVEL_INFO=y
CONFIG_LOG_MAXIMUM_LEVEL=V
CONFIG_LOG_COLORS=y
