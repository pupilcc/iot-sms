menu "Application Configuration"

    config APP_WIFI_SSID
        string "WiFi SSID"
        default "YOUR_WIFI_SSID"
        help
            SSID of the Wi-Fi network to connect to.

    config APP_WIFI_PASSWORD
        string "WiFi Password"
        default "YOUR_WIFI_PASSWORD"
        help
            Password of the Wi-Fi network.

    config APP_UART_PORT_NUM
        int "UART Port Number for Air712UG"
        default 1
        range 0 2
        help
            UART port to use for communication with Air712UG. (ESP32C3 has UART0, UART1)

    config APP_UART_TXD
        int "UART TXD Pin for Air712UG"
        default 21
        help
            GPIO pin for UART TX (connects to Air712UG RX).

    config APP_UART_RXD
        int "UART RXD Pin for Air712UG"
        default 20
        help
            GPIO pin for UART RX (connects to Air712UG TX).

    config APP_UART_BAUD_RATE
        int "UART Baud Rate for Air712UG"
        default 115200
        help
            Baud rate for UART communication with Air712UG.

    config APP_MQTT_BROKER_URI
        string "MQTT Broker URI"
        default "mqtt://broker.emqx.io:1883"
        help
            URI of the MQTT broker (e.g., mqtt://broker.emqx.io:1883).

    config APP_MQTT_TOPIC_SMS
        string "MQTT Topic for SMS"
        default "esp32/sms"
        help
            MQTT topic to publish received SMS messages.

endmenu
